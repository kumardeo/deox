{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"lib": ["ES2015", "DOM", "WebWorker"],
		"declaration": true,
		"moduleResolution": "Node10",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "dist",
		"types": ["node"]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
