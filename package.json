{
  "name": "deox",
  "private": true,
  "description": "WASM Packages for Cloudflare Workers",
  "author": "Deo Kumar",
  "homepage": "https://github.com/kumardeo/deox",
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "check": "pnpm biome check .",
    "check:types": "turbo check:types --force",
    "check:fix": "pnpm biome check --apply .",
    "upgrade": "ncu",
    "build": "turbo run build --concurrency=1",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "clean": "turbo run clean --concurrency=1",
    "test": "turbo run test --concurrency=1",
    "publish-packages": "cross-env PUBLISH=true pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@cloudflare/workers-types": "^4.20240419.0",
    "@microsoft/api-extractor": "^7.43.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.7",
    "arg": "^5.0.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.20.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.12",
    "npm-check-updates": "^16.14.18",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "terser": "^5.31.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.3",
    "turbo": "^1.13.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  }
}
